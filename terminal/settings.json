    { "keys": "alt+ctrl+f", "id": "User.Find" },

    { "keys": "alt+shift+a", "id": "User.Tab0" },
    { "keys": "alt+shift+s", "id": "User.Tab1" },
    { "keys": "alt+shift+d", "id": "User.Tab2" },
