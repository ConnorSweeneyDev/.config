    { "keys": "alt+shift+z", "id": "User.CloseTab" },
    { "keys": "alt+shift+t", "id": "User.DuplicateTab" },
    { "keys": "alt+shift+w", "id": "User.NewWindow" },
    { "keys": "alt+shift+j", "id": "User.ScrollDown12" },
    { "keys": "alt+shift+k", "id": "User.ScrollUp12" },

    { "keys": "alt+shift+e", "id": "User.OpenCwdInExplorer" },
    { "keys": "alt+shift+v", "id": "User.CleanTab" },
    { "keys": "alt+shift+b", "id": "User.BuildTab" },
    { "keys": "alt+shift+n", "id": "User.RunTab" },
